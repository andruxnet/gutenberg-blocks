{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "customberg/simple-rich-text",
	"version": "0.1.0",
	"title": "Simple Rich Text",
	"category": "customberg",
	"icon": "edit-large",
	"description": "Simplified Rich Text block to be used in InnerBlocks.",
	"attributes": {
		"tag": {
			"type": "string",
			"default": "p"
		},
		"content": {
			"type": "string"
		},
		"placeholder": {
			"type": "string",
			"default": "Write here..."
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "customberg",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
